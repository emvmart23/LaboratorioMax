<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio09.Stylecss">
    <ContentPage.Resources>
        <StyleSheetExtension Source="Styles/Styles.css"/>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="Center" Margin="20">
        <Label x:Name="title" Text="Ejemplo usando CSS"/>
        <StackLayout Orientation="Vertical">
            <Entry Placeholder="Your username"></Entry>
            <Entry Placeholder="Your password"></Entry>
            <Entry Placeholder="Your email" ></Entry>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <CheckBox></CheckBox>
            <Label Text="from another device"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Give-Up"></Button>
            <Button x:Name="signup" Text="Sign-Up"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
    